<h1><%= t(:domain_list)%> </h1>
    <div>
        <ul class="list-unstyled">
            <% @domains_data.each do |domain| %>
                <li> 
                    <%= link_to(domain["app_url"].gsub(/http:\/\/|\//, ''),domain["app_url"]) %> 
                    <ul>
                        <li>
                        <%= domain["connection_url"] %>
                        </li>
                    </ul>
                </li>
            <% end %>
        </ul>
    </div>
    <div>
        <%= link_to t(:create_domain), {:controller => "domains", :action => "new"}, class: "btn btn-default" %>
    </div>

