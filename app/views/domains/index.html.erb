<h1><%= t(:domain_list)%> </h1>

    <ul>
    </ul>
    <div>
        <div class="list-group">
            <% @domains_data.each do |domain| %>
            <div class="list-group-item">
                <h2><%= link_to(domain["aliases"][0]["id"],"http://"+domain["aliases"][0]["id"]) %></h4>
                <h4><%= link_to(domain["app_url"].gsub(/http:\/\/|\//, ''),domain["app_url"]) %></h4>
                <p><%= domain["framework"] %></p>
                <p><%= domain["git_url"] %></p>
            </div>
            <% end %>
        </div>
    </div>
    <div>
        <%= link_to t(:create_domain), {:controller => "domains", :action => "new"}, class: "btn btn-default" %>
    </div>

<div class="debug" style="margin-top: 100px;">
<code>
<%= JSON.pretty_generate(@domains_data) %>
</code>
</div>
